  ---
  const currentPath = Astro.url.pathname;
  ---
  
  <header>
    <nav>
      <div class="logo">
            <img src="/logo.svg" alt="Toki House Logo">
        </div>
      <div class="navbar">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
      <a href="/cases" class={currentPath === '/cases' || currentPath === '/cases/' ? 'active' : ''}>CASES</a>
      <a href="/toki-flow" class={currentPath === '/toki-flow' || currentPath === '/toki-flow/' ? 'active' : ''}>TOKI FLOW</a>
      <a href="/contact" class={currentPath === '/contact' || currentPath === '/contact/' ? 'active' : ''}>CONTACT</a>
      </div>
    </nav>
  </header>

  <style>
    header {
        padding: 20px 50px;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
    }

   .logo {
        width: 80px;
        height: 80px;
    }

    .logo img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .navbar {
        display: flex;
        list-style: none;
        gap: 50px;
        margin: 0;
        padding: 0;
        align-items: center;
        font-family: JosefinSans;
    }

    nav a {
         text-decoration: none;
        color: #000;
        font-weight: bold;
        font-size: 18px;
        letter-spacing: 0.5px;
        padding: 12px 35px;
        border-radius: 30px;
        transition: all 0.5s;
    }

    nav a.active {
        background-color: #9a9678;
        color: #000;
    }

    nav a:hover {
        background-color: #9a9678;
    }

    @media (max-width: 768px) {
        header {
            padding: 15px 20px;
        }

        nav ul {
            gap: 15px;
        }

        nav a {
            font-size: 12px;
        }

        .logo img {
            height: 40px;
        }
    }
</style>
